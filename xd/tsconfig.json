{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": [
        "es2017",
        "es7",
        "es6",
        "dom"
      ],
      "jsx": "react",
      "esModuleInterop": true,
      "outDir": "dist",
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "noUnusedLocals": false,
      "typeRoots": [
        "./node_modules/@types",
        "../node_modules/@types",
      ]
    },
    "exclude": [
      "node_modules",
      "dist",
      "build",
      "example",
      "tests"
    ]
  }